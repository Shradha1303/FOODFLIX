<style>
    .myContainer{
        width : 100vw;
        height: 100vh;
        background-color: #94B49F;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        width : auto;
        height: auto;
        background-color: white;
        border-radius: 25px;
        padding: 15px;
    }
    .divheading{
       display: flex;
       justify-content: space-between;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food List</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+Lao&family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="myContainer">
        <div class="box">
            <div class="divheading">
                <img src="/images/logo.png" height="70">
                <span  style="font-family: 'Roboto Condensed', sans-serif; padding-left: 3px;font-size: 26px; letter-spacing: 1;"><b>Item List</b></span>
                <a href="/food/foodinterface"><img src="/images/add.png" height="40"></a>
            </div>
            
        <table cellpadding="15" class=" table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Food id</th>
                    <th>Food Type</th>
                    <th>Food Item</th>
                    <th>VEG/NONVEG</th>
                    <th>Availability</th>
                    <th>Description</th>
                    <th><s>Price</s><br>OfferPrice</th>
                    <th>Picture</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                <%data.map((item)=>{%>
                <tr>
                    <td class="text-center"><%=item.idfood%></td>
                    <td class="text-center"><%=item.foodtype%></td>
                    <td class="text-center"><%=item.foodname%></td>
                    <td class="text-center"><%=item.status1%></td>
                    <td class="text-center"><%=item.status2%></td>
                    <td class="text-center"><%=item.description%></td>
                    <td class="text-center"><s><%=item.price%></s><br><%=item.offerprice%></td>
                    <td class="text-center"><a href="/food/displayposter?idfood=<%=item.idfood%>&picture=<%=item.picture%>"><img src="/images/<%=item.picture%>" height='50' weight='50'/></a></td>
                    <td class="text-center"><a href="/food/edit_food_data?idfood=<%=item.idfood%>">Edit/Delete</a>
                    </td>
                </tr>
                <%})%>
            </tbody>
        </table>
        </div>
    </div>
</body>
</html>