<style>
    *{
    margin: 0;
    padding: 0;
    }
    .myContainer{
        width : 100vw;
        height: 100vh;
        background-color: #94B49F;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .box{
        width : 50%;
        height: auto;
        background-color: white;
        border-radius: 25px;
        padding: 15px;
    }
    .divheading{
       display: flex;
       justify-content: space-between;
    }
    .centerStyle{
        display: flex;
        justify-content: center;
    }
    .radiostyle{
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
    .font{
        font-family: 'Noto Serif Lao', serif; 
        font-weight: bolder;
    }
</style>

<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+Lao&family=Poppins:wght@300&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script src="/javascripts/Project.js"></script>
        <title>FOODFLIX</title>
        <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    </head>
    <div class="myContainer">
        <div class="box">
            <div class="divheading">
                <div>
                    <img src="/images/logo.png" height="70" >
                    <span style=" font-family: 'Roboto Condensed', sans-serif; padding-left: 3px;font-size: 26px; letter-spacing: 1;">Edit Food</span>
                </div>
                <div>
                    <a href="/food/all_details"><img src="/images/list.png" height="50"></a>
                </div>
                
            </div>
            <form class="row g-3" action="/food/edit_food_details" method="post">
                <input type="hidden" value="<%=data.idfood%>" name="idfood">
                <div class="col-md-6" >
                    <label for="foodtype" class="form-label font">Food Type</label>
                    <select name="foodtype" id="foodtype" value="<%=data.foodid%>" class="form-select" aria-label="Default select example">
                        <option selected value="<%=data.foodid%>"><%=data.foodtype%></option>
                      </select>
                </div>
                <div class="col-md-6" >
                    <label for="fooditem" class="form-label font">Food Item</label>
                    <select name="fooditem" id="fooditem" value="<%=data.fooditemid%>" class="form-select" aria-label="Default select example">
                    <option selected value="<%=data.fooditemid%>"><%=data.foodname%></option>
                    </select>
                </div>
                
                <div class="col-md-6" >
                    <div class="font">Status</div>
                    <div class="radiostyle">
                        <div class="form-check">
                            <input class="form-check-input" <%=data.status1=="VEG"?"checked":""%> type="radio" name="status1" id="VEG" value="VEG">
                            <label class="form-check-label" for="status1">
                              VEG
                            </label>
                        </div> 
                        <div class="form-check"> 
                            <input class="form-check-input" <%=data.status1=="NON VEG"?"checked":""%> type="radio" name="status1" id="NON VEG" value="NON VEG">
                            <label class="form-check-label" for="status1">
                              NON VEG
                            </label>
                        </div>
                    </div>
            </div>
                <div class="col-md-6 ">
                    <div class="font">Availability Status</div>
                    <div class="radiostyle">
                    <div class="form-check ">
                        
                        <input class="form-check-input" <%=data.status2=="Available"?"checked":""%> type="radio" value="Available" name="status2" id="Available">
                        <label class="form-check-label" for="status2">
                          Available
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" <%=data.status2=="Not Available"?"checked":""%> type="radio" value="Not Available" name="status2" id="Not Available">
                        <label class="form-check-label" for="status2">
                          Not Available
                        </label>
                    </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <label for="des" class="form-label font">Description</label>
                    <input name="des" id="des" value="<%=data.description%>" type="text" class="form-control" >
                </div>
                <div class="col-md-6" >
                    <label for="price" class="form-label font">Price</label>
                    <input name="price" id="price" value="<%=data.price%>" type="text" class="form-control" >
                </div>
                <div class="col-md-6" >
                    <label for="offerprice" class="form-label font">Offer Price</label>
                    <input name="offerprice" id="offerprice" value="<%=data.offerprice%>" type="text" class="form-control" >
                </div>  
                <div class="col-md-6 centerStyle" >
                    <button type="submit" value="EDIT" name="btn" class="btn btn-primary" style=" width: 60%; ">EDIT</a></button>
                </div>
                <div class="col-md-6 centerStyle" >
                    <button type="submit" value="DELETE" name="btn" class="btn btn-primary" style=" width: 60%;" >DELETE</button>
                </div>
            </form>
        </div>
    </div>
</html>